{
	"compilerOptions": {
		"alwaysStrict": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"jsx": "react",
		"module": "commonjs",
		"newLine": "LF",
		"noEmitDecorators": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"pretty": true,
		"rootDir": "src/ts",
		"strictNullChecks": true
	},
	"target": "es5",
	"exclude": [
		"node_modules"
	],
	"filesGlob": [
		"src/ts/**/*.ts"
	]
}
